<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/banner_describe"
      />

    <RadioGroup
      android:id="@+id/banner_size"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:checkedButton="@id/bt_banner_1080"
      android:orientation="horizontal"
      >

      <RadioButton
        android:id="@+id/bt_banner_720"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_radio_btn"
        android:button="@null"
        android:gravity="center"
        android:text="@string/app_banner_720"
        android:textColor="@drawable/text_color_radio_btn"
        android:textSize="@dimen/ads_app_magic_text_size_body3"
        />

      <RadioButton
        android:id="@+id/bt_banner_640"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_radio_btn"
        android:button="@null"
        android:gravity="center"
        android:text="@string/app_banner_640"
        android:textColor="@drawable/text_color_radio_btn"
        android:textSize="@dimen/ads_app_magic_text_size_body3"
        />

      <RadioButton
        android:id="@+id/bt_banner_1080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_radio_btn"
        android:button="@null"
        android:gravity="center"
        android:text="@string/app_banner_1080"
        android:textColor="@drawable/text_color_radio_btn"
        android:textSize="@dimen/ads_app_magic_text_size_body3"
        />

      <RadioButton
        android:id="@+id/bt_banner_225"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_radio_btn"
        android:button="@null"
        android:gravity="center"
        android:text="@string/app_banner_225"
        android:textColor="@drawable/text_color_radio_btn"
        android:textSize="@dimen/ads_app_magic_text_size_body3"
        />
    </RadioGroup>

    <Button
      android:id="@+id/bt_load_ad"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/app_load_ad"
      />

    <FrameLayout
      android:id="@+id/ad_content_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="8dp"
      >

      <FrameLayout
        android:id="@+id/ad_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></FrameLayout>

    </FrameLayout>
  </LinearLayout>
</ScrollView>
